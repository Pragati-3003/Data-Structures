<!-- https://leetcode.com/problems/flatten-binary-tree-to-linked-list/description/ -->


class Solution {
public:
    void flatten(TreeNode* root) {
        TreeNode* curr = root;
        while (curr != NULL) {
            if (curr->left) {
                TreeNode* pred = curr->left;
                while (pred->right)
                    pred = pred->right;
                pred->right = curr->right;
                curr->right = curr->left;
                curr->left = NULL;
            }
            curr = curr->right;
        }
    }
};